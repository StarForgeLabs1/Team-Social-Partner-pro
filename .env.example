# === Basic Configuration ===
NODE_ENV=production
DEBUG=false
SECRET_KEY=your-super-secret-key-here
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com
ALLOWED_HOSTS=["localhost", "yourdomain.com"] # From backend config

# === Database Configuration ===
DATABASE_URL=postgresql://user:password@postgres:5432/social_media_platform # Renamed DB for generality
REDIS_URL=redis://redis:6379/0
MONGODB_URL=mongodb://mongo:27017/social_accounts # Renamed Mongo for generality
POSTGRES_USER=youruser # Example from docker-compose
POSTGRES_PASSWORD=yourpassword # Example from docker-compose
POSTGRES_DB=social_media_platform # Example from docker-compose
MONGO_PASSWORD=yourmongopassword # Example from docker-compose

# === JWT Authentication ===
JWT_SECRET=your-ultra-secure-jwt-key-2024
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440

# === TikTok API Configuration (Official Developer API) ===
TIKTOK_CLIENT_KEY=your_tiktok_client_key
TIKTOK_CLIENT_SECRET=your_tiktok_client_secret
TIKTOK_REDIRECT_URI=https://yourdomain.com/auth/tiktok/callback
TIKTOK_WEBHOOK_URL=https://yourdomain.com/webhooks/tiktok

# === Other Social Media API Configurations (Examples) ===
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret
TWITTER_CONSUMER_KEY=your_twitter_consumer_key
TWITTER_CONSUMER_SECRET=your_twitter_consumer_secret
INSTAGRAM_APP_ID=your_instagram_app_id
INSTAGRAM_APP_SECRET=your_instagram_app_secret
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret

# === AI Service Configuration ===
OPENAI_API_KEY=sk-your-openai-api-key
ELEVENLABS_API_KEY=your-elevenlabs-key
STABILITY_AI_KEY=your-stability-ai-key
AZURE_SPEECH_KEY=your_azure_speech_key
AZURE_SPEECH_REGION=your_azure_region

# === Account Isolation Configuration ===
PROXY_POOL_SIZE=100
MAX_ACCOUNTS_PER_PROXY=3
ACCOUNT_ISOLATION_ENABLED=true
FINGERPRINT_RANDOMIZATION=true

# === Security Monitoring ===
SECURITY_WEBHOOK_URL=your_security_webhook
ACCOUNT_HEALTH_CHECK_INTERVAL=300
SUSPICIOUS_ACTIVITY_THRESHOLD=5

# === File Storage ===
AWS_ACCESS_KEY_ID=your_aws_key
AWS_SECRET_ACCESS_KEY=your_aws_secret
AWS_S3_BUCKET=social-media-platform-storage # Renamed bucket for generality
AWS_REGION=us-east-1

# === Developer Platform ===
ADMIN_SECRET_KEY=your-admin-secret-key-2024
DEVELOPER_PANEL_ENABLED=true
MAX_ACCOUNTS_GLOBAL=1000
